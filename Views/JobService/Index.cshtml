@model testcrud.Data.ViewModels.JobServiceViewModel

@{

	ViewData["title"] = "index";
}
<div class="page-wrapper">
	<div class="page-content">
		<!--breadcrumb-->
		<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
			<div class="breadcrumb-title pe-3">Tables</div>
			<div class="ps-3">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-0 p-0">
						<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">Data Table</li>
					</ol>
				</nav>
			</div>
		</div>
		<!--end breadcrumb-->
		<h6 class="mb-0 text-uppercase">Job Recruitment</h6>
		<hr />
		<div class="card">
			<div class="card-body">
				<div class="btn-group" >
					<a asp-action="Create" class="btn btn-primary mb-3 mb-lg-0"><i class="bx bxs-plus-square"></i>Create JobService</a>
				</div>			
                <form asp-action="Index" method="get" class="col-4 mt-4">
                    <div class="input-group mb-3">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search by Name" value="@Model.SearchTerm" />
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>			
				<div class="table-responsive">
					<table id="example" class="table table-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
						@{
    int count = 0; // Initialize the counter
}
				@foreach (var item in Model.JobServices)
				{		
				            count++; // Increment the counter for each item
							<tr>
				                <td>@count</td> <!-- Display the count -->
								<td>@Html.DisplayFor(x => item.Name)</td>
								<td>
						            <a href="" class=""></a>
            							<a class=" btn-outline-info" asp-action="Edit" asp-controller="JobService" asp-route-id="@item.Id"><i class="bx bxs-edit"></i></a>
										<a asp-controller="JobService" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are You Sure Want To Delete This JobService')" ><i class="fadeIn animated bx bx-message-square-x"></i></a>            							
								</td>
							</tr>
				}		
						</tbody>
						<tfoot>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Action</th>
							</tr>
						</tfoot>
					</table>
					<div>
					    @if (Model.PagingInfo.TotalPages > 1)
					    {
					    
					        for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
					        {
                                <a href="@Url.Action("Index", new { pageNumber = i,  searchTerm = Model.SearchTerm })" class="btn @(i == Model.PagingInfo.CurrentPage ? "btn-primary" : "btn-secondary")">
                                    @i
                                </a>					            
					        }
					    }
					</div>					
				</div>
			</div>
		</div>
	</div>
</div>