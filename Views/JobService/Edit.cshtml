@model JobService
@{

	ViewData["title"] = "Edit";
}
<div class="page-wrapper">
	<div class="page-content">
		<!--breadcrumb-->
		<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
			<div class="breadcrumb-title pe-3">Home</div>
			<div class="ps-3">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-0 p-0">
						<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">Edit</li>
					</ol>
				</nav>
			</div>
		</div>
		<!--end breadcrumb-->
		<div class="row">
			<div class="col-xl-12 mx-auto">
				<h6 class="mb-0 text-uppercase">@Model.NameEnglish</h6>
				<hr />
				<div class="card">
					<div class="card-body">
						<div class="p-4 border rounded">
							<form asp-action="Edit" class="row g-3 " >
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>	
								<div class="col-md-4">
									<label asp-for="NameEnglish" for="validationCustom01" class="form-label"></label>
									<input type="text" asp-for="NameEnglish" class="form-control" id="validationCustom01" autocomplete="off"
										required>
									<span asp-validation-for="NameEnglish" class="text-danger"></span>
								</div>
								<div class="col-md-4">
									<label asp-for="NameArabic" for="validationCustom01" class="form-label"></label>
									<input type="text" asp-for="NameArabic" class="form-control" id="validationCustom01" autocomplete="off"
										required>
									<span asp-validation-for="NameArabic" class="text-danger"></span>
								</div>								
								<div class="col-12">
									<button class="btn btn-primary" type="submit">Submit form</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--end row-->
	</div>
</div>

@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}