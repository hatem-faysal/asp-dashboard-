@model IEnumerable<ApplicationUser>

@{

	ViewData["title"] = "index";
}

<div class="page-wrapper">
	<div class="page-content">
		<!--breadcrumb-->
		<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
			<div class="breadcrumb-title pe-3">Tables</div>
			<div class="ps-3">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb mb-0 p-0">
						<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">Data Table</li>
					</ol>
				</nav>
			</div>
			<div class="ms-auto">
				<div class="btn-group">
					<button type="button" class="btn btn-primary">Settings</button>
					<button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
						data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle Dropdown</span>
					</button>
					<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item"
							href="javascript:;">Action</a>
						<a class="dropdown-item" href="javascript:;">Another action</a>
						<a class="dropdown-item" href="javascript:;">Something else here</a>
						<div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated
							link</a>
					</div>
				</div>
			</div>
		</div>
		<!--end breadcrumb-->
		<h6 class="mb-0 text-uppercase">DataTable Example</h6>
		<hr />
		<div class="card">
			<div class="card-body">
				<div class="table-responsive">
					<table id="example" class="table table-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th>#</th>
								<th>Full Name</th>
								<th>Email</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
						@{
    int count = 0; // Initialize the counter
}
				@foreach (var item in Model)
				{		
				            count++; // Increment the counter for each item
							<tr>
				                <td>@count</td> <!-- Display the count -->
								<td>@Html.DisplayFor(x => item.FullName)</td>
								<td>@Html.DisplayFor(x => item.Email)</td>
								<td>
						            <a href="" class=""></a>
            							<a class=" btn-outline-info" asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id"><i class="bx bxs-edit"></i></a>
										<a  asp-route-id="@item.Id" onclick="return confirm('Are You Sure Want To Delete This Admin')" ><i class="fadeIn animated bx bx-message-square-x"></i></a>            							
								</td>
							</tr>
				}		
						</tbody>
						<tfoot>
							<tr>
								<th>#</th>
								<th>Full Name</th>
								<th>Email</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>